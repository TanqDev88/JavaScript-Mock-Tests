							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"pm.test(\"El body contiene los campos esperados\", function () {\r",
							"    pm.expect(pm.response.text()).to.include(\"Aviso de viaje eliminado correctamente\");\r",
							"});\r",
							"pm.test(\"Validar campo en el JSON\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.mensaje).to.eql(\"Aviso de viaje eliminado correctamente\");\r",
							"});\r",
							"pm.test(\"Response time is less than 200ms\", function () {\r",
							"    pm.expect(pm.response.responseTime).to.be.below(200);\r",
							"});\r",
							"pm.environment.set(\"id_eliminado\", pm.response.json().id_eliminado);\r",
