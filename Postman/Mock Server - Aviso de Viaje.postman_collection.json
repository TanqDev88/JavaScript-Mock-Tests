					"script": {
						"exec": [
							"pm.test(\"Status code es 200 OK\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"pm.test(\"Response tiene body y es JSON\", function () {\r",
							"    pm.response.to.be.withBody;\r",
							"    pm.response.to.be.json;\r",
							"});\r",
							"pm.test(\"Campo Tarjetas existe y es array\", function () {\r",
							"    const jsonData = pm.response.json();\r",
							"    pm.expect(jsonData).to.have.property(\"Tarjetas\");\r",
							"    pm.expect(jsonData.Tarjetas).to.be.an(\"array\");\r",
							"    pm.expect(jsonData.Tarjetas.length).to.be.above(0);\r",
							"});\r",
							"pm.test(\"Tiempo de respuesta menor a 300ms\", function () {\r",
							"    pm.expect(pm.response.responseTime).to.be.below(300);\r",
							"});\r",
							"\r",
							"pm.test(\"Cada tarjeta tiene campos esperados\", function () {\r",
							"    const tarjetas = pm.response.json().Tarjetas;\r",
							"    tarjetas.forEach(t => {\r",
							"        pm.expect(t).to.have.property(\"marca\");\r",
							"        pm.expect(t).to.have.property(\"categoria\");\r",
							"    });\r",
