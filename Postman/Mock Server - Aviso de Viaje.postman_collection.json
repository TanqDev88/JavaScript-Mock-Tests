					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"El status code es 200 ok\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"pm.test(\"El viaje no contiene tarjetas\", function () {\r",
							"    const jsonData = pm.response.json();\r",
							"\r",
							"    // Validamos que exista 'viajes' y sea un array\r",
							"    pm.expect(jsonData.viajes).to.be.an(\"array\").that.is.not.empty;\r",
							"\r",
							"    // Tomamos el primer viaje\r",
							"    const viaje = jsonData.viajes[0];\r",
							"\r",
							"    // Validamos que el campo 'tarjetas' exista y esté vacío\r",
							"    pm.expect(viaje).to.have.property(\"tarjetas\");\r",
							"    pm.expect(viaje.tarjetas).to.be.an(\"array\").that.is.empty;\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
