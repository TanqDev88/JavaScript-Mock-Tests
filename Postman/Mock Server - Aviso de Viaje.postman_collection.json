					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"pm.test(\"Response es JSON\", function () {\r",
							"    pm.response.to.be.withBody;\r",
							"    pm.response.to.be.json;\r",
							"});\r",
							"pm.test(\"El campo viajeid está presente\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData).to.have.property(\"viajeid\");\r",
							"    pm.expect(jsonData.viajeid).to.be.a(\"string\"); // o \"number\", según lo que devuelva tu mock\r",
							"});\r",
							"pm.environment.set(\"viajeid\", pm.response.json().viajeid);\r",
							"pm.test(\"Tiempo de respuesta menor a 300ms\", function () {\r",
							"    pm.expect(pm.response.responseTime).to.be.below(300);\r",
							"});\r",
							""
